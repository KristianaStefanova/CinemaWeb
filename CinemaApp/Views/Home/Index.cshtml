@{
	ViewData["Title"] = "Home Page";
}

<div class="container mt-4">

	<div class="container mt-4">
		<div class="position-relative text-white text-center mb-4"
			 style="background: linear-gradient(to bottom,rgba(0,0,0,0.5), rgba(0, 0,0,0.5)),
                   url('/images/cinema-panoramic-megeve.jpg') center/cover no-repeat;
                   height: 50vh; border-radius: 12px;">
			<div class="position-absolute top-50 start-50 translate-middle">
				<h1 class="display-1 fw-bold text-warning text-uppercase" style="font-size: 4rem;">
					Welcome to CinemaWebApp!
				</h1>
				<p class="lead text-light fw-bold fs-4">Discover the best cinemas and movies tailored for your entertainment.</p>
				<div class="mt-3">
					<a asp-controller="Movie" asp-action="Index"
					   class="btn btn-outline-light fw-bold rounded-pill px-4 py-2 shadow-sm">
						<i class="bi bi-film"></i> Browse Movies
					</a>
				</div>
			</div>
		</div>
	</div>

    <body class="d-flex flex-column min-vh-100 bg-dark text-light">

        <main class="container my-5 pb-5">
            <h2 class="text-center fw-bold mb-4 text-light">Popular Choices</h2>

            <div class="row d-flex align-items-stretch">
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-lg border-0 rounded-3 bg-secondary">
                        <div class="card-body text-center p-4">
                            <h5 class="card-title fw-bold text-primary">🏆 Cinema City Sofia</h5>
                            <p class="card-text text-light">Voted as the best cinema experience this month.</p>
                            <small class="text-light">Over 10,000 visitors last month.</small>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-lg border-0 rounded-3 bg-secondary">
                        <div class="card-body text-center p-4">
                            <h5 class="card-title fw-bold text-danger">🎬 Dune: Part Two</h5>
                            <p class="card-text text-light">The sci-fi epic that has everyone talking!</p>
                            <small class="text-light">Rated ⭐⭐⭐⭐⭐ (9.2 /10 IMDB)</small>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <footer class="bg-dark text-center text-light py-3 mt-auto">
            <p class="mb-0">© 2025 - Tu Aplicación de Cine</p>
        </footer>

    </body>

</div>
@section Scripts {
}
@section Styles {
	<link rel="stylesheet" href="~/css/user.css">
}
